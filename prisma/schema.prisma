generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

enum Role {
    USER
    ADMIN
}

model User {
    id       String @id @default(cuid())
    name     String
    email    String
    phone    String
    password String
    role     Role @default(USER)
    Reserved Reserved[]
}

model Store {
    id        String    @id @default(cuid())
    name      String
    location  String
    openTime  String
    closeTime String
    service   String[]
    Reserved  Reserved[]
}

model Reserved {
    id      String @id @default(cuid())
    name    String
    phone   String
    date    DateTime
    services String[]
    userId  String 
    storeId String
    User    User?  @relation(fields: [userId], references: [id])
    Store   Store? @relation(fields: [storeId], references: [id])
}

model Review {
    id     String @id @default(cuid())
    name   String
    rating Int
    review String
    image  String
}
